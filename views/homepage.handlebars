<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/blog/{{id}}">{{title}}</a>
      </h2>
    </div>
    <div class="card-body">
      <div>
        Date Posted
        {{formatDate createdAt}}
        by
        {{user.user_name}}
      </div>
      {{body}}
    </div>
  </article>
  {{/each}}
</div>