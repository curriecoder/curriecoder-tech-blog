<div class="container mb-4">
  <div class="text-left">
    <a href="/post" type="button" class="btn btn-primary btn-lg">+ New Post</a>
  </div>
</div>

<div class="container">
  <form id="new-post-form" class="card">
    <div class="card-header">
      <h3>New Post</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{thisPost.id}}" />

      <input id="post-title" class="form-input" placeholder="Post Title"></input>

      <textarea id="post-body" name="post-body" class="form-input" placeholder="Post Body"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

{{#each posts as |post|}}
<div class="row justify-content-center">
  <div class="card col-lg-9 mb-3">
    <div class="card-header bg-success">
      Posted by
      {{user.user_name}}
      on
      {{formatDate post.date}}
    </div>
    <div class="card-body bg-dark text-light">
      <h5 class="card-title">{{post.title}}</h5>
      <p class="card-text">{{post.post_text}}</p>
      {{#if loggedIn}}
      <a href="#" class="btn btn-primary">Leave a Comment!</a>
      {{/if}}
    </div>
  </div>
</div>
{{/each}}