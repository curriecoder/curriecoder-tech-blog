<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>

      <div>
        Posted
        {{formatDate post.date}}
        by
        {{post.user.username}}
      </div>
    </div>

    <div class="card-body">
      {{post.post_text}}
    </div>
  </article>

  {{#if post.comments}}
  <section class="card">
    <div class="card-header">
      <h3>Comments</h3>
    </div>

    <div class="card-footer">
      {{#each post.comments}}
      <div>
        <p>
          {{comment_text}}
        </p>

        <p>
          &mdash; {{user.username}}, {{formatDate comment.date}}
        </p>
      </div>
      {{/each}}
    </div>
  </section>
  {{/if}}

<div class="container">
  <form id="new-post-form" class="card">
    <div class="card-header">
      <h3>New Post</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{thisPost.id}}" />

      <input id="post-title" class="form-input" placeholder="Post Title"></input>

      <textarea id="post-body" name="post-body" class="form-input" placeholder="Post Body"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<div class="container">
  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{thisPost.id}}"/>

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/post.js"></script>